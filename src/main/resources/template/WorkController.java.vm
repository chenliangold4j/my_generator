package ${package}.${moduleName}.controller;

import java.util.Arrays;
import java.util.Map;
import java.util.Date;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import ${package}.${moduleName}.entity.${className}Entity;
import ${package}.${moduleName}.service.${className}Service;
import com.gonghui.entity.Result;


/**
 * ${comments}
 *
 * @author ${author}
 * @email ${email}
 * @date ${datetime}
 */
@RestController
@RequestMapping("${moduleName}/${pathName}")
public class ${className}Controller {
    @Autowired
    private ${className}Service ${classname}Service;

    /**
     * 列表
     */
    @RequestMapping("/list")
    Object list(
        #foreach ($column in $columns)
             $column.attrType $column.attrname,
        #end
            Integer page,Integer size
    ){
        Object pages = ${classname}Service.list(#foreach ($column in $columns) $column.attrname,#end page,size);
        return Result.createDefaultSuccessDataResult(pages);
    }


    /**
     * 信息
     */
    @RequestMapping("/info/{${pk.attrname}}")
    public Object info(@PathVariable("${pk.attrname}") ${pk.attrType} ${pk.attrname}){
		${className}Entity ${classname} = ${classname}Service.getById(${pk.attrname});
        return Result.createDefaultSuccessDataResult(${classname});
    }

    /**
     * 保存
     */
    @RequestMapping("/save")
    public Object save(@RequestBody ${className}Entity ${classname}){
        return Result.createDefaultSuccessDataResult(${classname}Service.save(${classname}));
    }

    /**
     * 修改
     */
    @RequestMapping("/update")
    public Object update(@RequestBody ${className}Entity ${classname}){
        return Result.createDefaultSuccessDataResult(${classname}Service.update(${classname}));
    }

    /**
     * 删除
     */
    @RequestMapping("/delete")
    public Object delete(${pk.attrType} ${pk.attrname}){
        return Result.createDefaultSuccessDataResult(${classname}Service.delete(${pk.attrname}));
    }

}
